<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="toys"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>toyid</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>toyid</Column>
    </UpdateKeys>
    <GeneratedKey>toyid</GeneratedKey>

    <Queries>
        <Query id="default">
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.toys
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
        <Query id="toyJoin">
            <AmbiguousColumns>
                <AmbiguousColumn name="price" prefix="t" />
                <AmbiguousColumn name="order_id" prefix="o" />
                <AmbiguousColumn name="toyid" prefix="t" />
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                 SELECT
                     #COLUMNS#
                 FROM
                     ${mainschema}.toys t
                 INNER JOIN
                     ${mainschema}.orders o ON t.toyid = o.toyid
                 INNER JOIN
                     ${mainschema}.shipments s ON o.order_id = s.order_id
                 #WHERE#
            ]]>
            </Sentence>
        </Query>
        <Query id="getNearbyToys">
            <AmbiguousColumns>
                <AmbiguousColumn name="toyid" prefix="t"/>
            </AmbiguousColumns>

            <Sentence>
                <![CDATA[
                     SELECT
                        #COLUMNS#
                     FROM
                        toys t
                        JOIN v_toy_distances vt ON t.toyid = vt.toyid
                     #WHERE#
                     #ORDER#
                ]]>
            </Sentence>
        </Query>
        <Query id="sumPriceToysSold">
            <Sentence>
                <![CDATA[
           SELECT
                #COLUMNS#
           from
                v_sum_price_toys_sold
           #WHERE#
    ]]>
            </Sentence>
        </Query>
        <Query id="getToysSellerData">
            <AmbiguousColumns>
                <AmbiguousColumn name="usr_id" prefix="t"/>
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        toys t
                    JOIN
                        usr_user u_seller on t.usr_id = u_seller.usr_id
                    #WHERE#
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>
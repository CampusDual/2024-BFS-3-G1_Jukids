<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="shipments"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>shipment_id</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>shipment_id</Column>
    </UpdateKeys>
    <GeneratedKey>shipment_id</GeneratedKey>
    <Queries>
        <Query id="default">
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.shipments
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
        <Query id="shipmentReceived">
            <AmbiguousColumns>
                <AmbiguousColumn name="price" prefix="t" />
            </AmbiguousColumns>
            <Sentence>
            <![CDATA[
                 SELECT
                     #COLUMNS#
                 FROM
                     shipments s
                 INNER JOIN
                     orders o ON o.order_id = s.order_id
                 INNER JOIN
                     toys t ON o.toyid = t.toyid
                 #WHERE#
            ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>
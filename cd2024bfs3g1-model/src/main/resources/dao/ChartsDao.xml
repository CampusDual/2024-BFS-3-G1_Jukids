<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="toys"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>toyid</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>toyid</Column>
    </UpdateKeys>
    <GeneratedKey>toyid</GeneratedKey>
    <Queries>
        <Query id="total_orders">
            <ValidColumns>
                <Column>order_month</Column>
                <Column>month_total_price</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                SELECT TO_CHAR(DATE_TRUNC('month', order_date), 'MM/YY') AS order_month,
                SUM(total_price) as month_total_price
                FROM orders
                GROUP BY DATE_TRUNC('month', order_date)
                ORDER BY DATE_TRUNC('month', order_date);
            ]]>
            </Sentence>
        </Query>
        <Query id = "total_delivers">
            <Sentence>
                <![CDATA[
                SELECT
                (SELECT COUNT(*) FROM orders) AS "Total Compras",
                (SELECT COUNT(*) FROM shipments) AS "Con Envíos",
                ((SELECT COUNT(*) FROM orders) - (SELECT COUNT(*) FROM shipments)) AS "Sin Envío";
            ]]>
            </Sentence>
        </Query>
        <Query id = "category_revenue">
            <Sentence>
                <![CDATA[
                SELECT
	            t.category as "Categoria",
	            ROUND(SUM(t.price) * 5.5 / 107, 2) AS "Comision"
                FROM toys t
                GROUP BY t.category
                ORDER BY t.category;
            ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>

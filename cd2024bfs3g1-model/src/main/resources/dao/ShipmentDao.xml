<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="shipments"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>shipment_id</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>shipment_id</Column>
    </UpdateKeys>
    <GeneratedKey>shipment_id</GeneratedKey>
    <Queries>
        <Query id="default">
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.shipments
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
        <Query id="shipmentReceivedQuery">
            <Sentence>
            <![CDATA[
            SELECT
                t.name, t.price, t.photo
            FROM
                orders o
            INNER JOIN
                users u ON o.buyer_id = u.id
            INNER JOIN
                toys t ON o.toy_id = t.id
            WHERE
                u.login = :login AND t.transaction_status = :transactionStatus
        ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>